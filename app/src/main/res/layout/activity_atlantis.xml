<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Atlantis"
    android:background="@color/colorPrimaryDark">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/atlantis"
            android:contentDescription="@string/atlantis_background"
            android:scaleType="centerCrop"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="100">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-black"
                android:text="@string/atlantis_header"
                android:textColor="#FFFFFF"
                android:textAlignment="gravity"
                android:layout_gravity="center_horizontal"
                android:textSize="25sp"
                android:textStyle="bold"
                app:drawableStartCompat="@drawable/ic_atlantis_logo"
                app:drawableLeftCompat="@drawable/ic_atlantis_logo" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginBottom="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginEnd="10dp">

                            <TextView
                                android:id="@+id/serverStatus"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:textColor="#FFFFFF"
                                android:layout_marginEnd="10dp"
                                android:layout_marginRight="10dp"
                                android:textSize="20sp"/>

                            <ImageView
                                android:id="@+id/statusImg"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/offline"
                                android:layout_gravity="center_vertical" />
                </LinearLayout>

            <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/swipeRefreshLayout">

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/actions_header"
                            android:textColor="#FFFFFF"
                            android:textSize="25sp"
                            android:layout_marginBottom="10dp"
                            android:layout_gravity="center_horizontal"
                            android:textAlignment="center"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <Button
                                android:id="@+id/waterfall_btn"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:minHeight="70dp"
                                android:layout_marginStart="10dp"
                                android:layout_marginLeft="10dp"
                                android:layout_marginTop="10dp"
                                android:layout_marginEnd="5dp"
                                android:layout_marginRight="5dp"
                                android:layout_weight="1"
                                style="?android:attr/button"
                                android:text="@string/atlantis_waterfall" />

                            <Button
                                android:id="@+id/poseidon_btn"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginTop="10dp"
                                android:layout_marginLeft="5dp"
                                android:layout_marginStart="5dp"
                                android:layout_marginRight="10dp"
                                android:layout_marginEnd="10dp"
                                style="?android:attr/button"
                                android:text="@string/atlantis_poseidon"
                                android:layout_weight="1"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:layout_marginBottom="10dp">

                            <TextView
                                android:id="@+id/waterfall_txt"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Off"
                                android:textColor="#FFFFFF"
                                android:textSize="18sp"
                                android:textAlignment="center"
                                android:layout_gravity="center_horizontal"
                                android:layout_weight="1"/>

                            <TextView
                                android:id="@+id/poseidon_txt"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Off"
                                android:textColor="#FFFFFF"
                                android:textSize="18sp"
                                android:textAlignment="center"
                                android:layout_gravity="center_horizontal"
                                android:layout_weight="1"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <Button
                                android:id="@+id/hexagon_pattern_btn"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginTop="10dp"
                                android:layout_marginLeft="10dp"
                                android:layout_marginStart="10dp"
                                android:layout_marginRight="5dp"
                                android:layout_marginEnd="5dp"
                                style="?android:attr/button"
                                android:text="@string/atlantis_hexagon_pattern"
                                android:layout_weight="1"/>

                            <Button
                                android:id="@+id/tritons_key_btn"
                                style="?android:attr/button"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginStart="5dp"
                                android:layout_marginLeft="5dp"
                                android:layout_marginTop="10dp"
                                android:layout_marginEnd="10dp"
                                android:layout_marginRight="10dp"
                                android:layout_weight="1"
                                android:minHeight="70dp"
                                android:text="@string/atlantis_tritons_key" />


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:layout_marginBottom="10dp">

                            <TextView
                                android:id="@+id/hexagon_pattern_txt"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Off"
                                android:textColor="#FFFFFF"
                                android:textSize="18sp"
                                android:textAlignment="center"
                                android:layout_gravity="center_horizontal"
                                android:layout_weight="1"/>

                            <TextView
                                android:id="@+id/tritons_key_txt"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Off"
                                android:textColor="#FFFFFF"
                                android:textSize="18sp"
                                android:textAlignment="center"
                                android:layout_gravity="center_horizontal"
                                android:layout_weight="1"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <Button
                                android:id="@+id/column2_btn"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:minHeight="70dp"
                                android:layout_marginTop="10dp"
                                android:layout_marginLeft="10dp"
                                android:layout_marginStart="10dp"
                                android:layout_marginRight="5dp"
                                android:layout_marginEnd="5dp"
                                style="?android:attr/button"
                                android:text="@string/atlantis_column2"
                                android:layout_weight="1"/>

                            <Button
                                android:id="@+id/hexagon_cabinets_btn"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginTop="10dp"
                                android:layout_marginLeft="5dp"
                                android:layout_marginStart="5dp"
                                android:layout_marginRight="10dp"
                                android:layout_marginEnd="10dp"
                                style="?android:attr/button"
                                android:text="@string/atlantis_hexagon_cabinets"
                                android:layout_weight="1"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:layout_marginBottom="10dp">

                            <TextView
                                android:id="@+id/column2_txt"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Off"
                                android:textColor="#FFFFFF"
                                android:textSize="18sp"
                                android:textAlignment="center"
                                android:layout_gravity="center_horizontal"
                                android:layout_weight="1"/>

                            <TextView
                                android:id="@+id/hexagon_cabinets_txt"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Off"
                                android:textColor="#FFFFFF"
                                android:textSize="18sp"
                                android:textAlignment="center"
                                android:layout_gravity="center_horizontal"
                                android:layout_weight="1"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <Button
                                android:id="@+id/column3_btn"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:minHeight="70dp"
                                android:layout_marginTop="10dp"
                                android:layout_marginLeft="10dp"
                                android:layout_marginStart="10dp"
                                android:layout_marginRight="5dp"
                                android:layout_marginEnd="5dp"
                                style="?android:attr/button"
                                android:text="@string/atlantis_column3"
                                android:layout_weight="1"/>

                            <Button
                                android:id="@+id/trident_unlock_btn"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginTop="10dp"
                                android:layout_marginLeft="5dp"
                                android:layout_marginStart="5dp"
                                android:layout_marginRight="10dp"
                                android:layout_marginEnd="10dp"
                                style="?android:attr/button"
                                android:text="@string/atlantis_trident_unlock"
                                android:layout_weight="1"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:layout_marginBottom="10dp">

                            <TextView
                                android:id="@+id/column3_txt"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Off"
                                android:textColor="#FFFFFF"
                                android:textSize="18sp"
                                android:textAlignment="center"
                                android:layout_gravity="center_horizontal"
                                android:layout_weight="1"/>

                            <TextView
                                android:id="@+id/trident_unlock_txt"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Off"
                                android:textColor="#FFFFFF"
                                android:textSize="18sp"
                                android:textAlignment="center"
                                android:layout_gravity="center_horizontal"
                                android:layout_weight="1"/>

                        </LinearLayout>

                        <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/room_door_1_2_btn"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:minHeight="70dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginStart="10dp"
                            android:layout_marginRight="5dp"
                            android:layout_marginEnd="5dp"
                            style="?android:attr/button"
                            android:text="@string/atlantis_room_door_1_2"
                            android:layout_weight="1"/>

                        <Button
                            android:id="@+id/holy_molly_btn"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginStart="5dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginEnd="10dp"
                            style="?android:attr/button"
                            android:text="@string/atlantis_holy_molly"
                            android:layout_weight="1"/>

                    </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:layout_marginBottom="10dp">

                            <TextView
                                android:id="@+id/room_door_1_2_txt"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Off"
                                android:textColor="#FFFFFF"
                                android:textSize="18sp"
                                android:textAlignment="center"
                                android:layout_gravity="center_horizontal"
                                android:layout_weight="1"/>

                            <TextView
                                android:id="@+id/holy_molly_txt"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Off"
                                android:textColor="#FFFFFF"
                                android:textSize="18sp"
                                android:textAlignment="center"
                                android:layout_gravity="center_horizontal"
                                android:layout_weight="1"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <Button
                                android:id="@+id/exit_btn"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:minHeight="70dp"
                                android:layout_marginTop="10dp"
                                android:layout_marginLeft="10dp"
                                android:layout_marginStart="10dp"
                                android:layout_marginRight="5dp"
                                android:layout_marginEnd="5dp"
                                style="?android:attr/button"
                                android:text="@string/exit"
                                android:layout_weight="1"/>

                            <Button
                                android:id="@+id/reset_btn"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginTop="10dp"
                                android:layout_marginLeft="5dp"
                                android:layout_marginStart="5dp"
                                android:layout_marginRight="10dp"
                                android:layout_marginEnd="10dp"
                                android:textColor="#AA0000"
                                android:text="@string/reset"
                                style="?android:attr/button"
                                android:layout_weight="1"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:layout_marginBottom="10dp">

                            <TextView
                                android:id="@+id/exit_txt"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Off"
                                android:textColor="#FFFFFF"
                                android:textSize="18sp"
                                android:textAlignment="center"
                                android:layout_gravity="center_horizontal"
                                android:layout_weight="1"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="18sp"
                                android:textAlignment="center"
                                android:layout_gravity="center_horizontal"
                                android:layout_weight="1"/>

                        </LinearLayout>

                    </LinearLayout>

                </ScrollView>

            </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

        </LinearLayout>

    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>